        <form asp-action="Contact" method="post" role="form" class="php-email-form mt-4">
            <p>Contact Form Currently Under Construction</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 form-group">
                    @*<label asp-for="Name" class="control-label"></label>*@
                    <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    @*<label asp-for="Email" class="control-label"></label>*@
                    <input asp-for="Email" class="form-control" id="email" placeholder="Your Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                @*<label asp-for="Subject" class="control-label"></label>*@
                <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" required />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                @*<label asp-for="Message" class="control-label"></label>*@
                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="text-center my-3"><button type="submit">Send Message</button></div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                   @ViewBag.Error
                </div>

            }
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>

            }

        </form>

    </div>
</section><!-- End Contact Section -->
